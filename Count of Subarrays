#include <iostream>
using namespace std;

int main() {
	   int n;
	   cin>>n;
	   while(n--){
	       int k,l;
	       cin>>k>>l;
	       int a[k];int sum=0;
	       int flag=0;
	       int dec=0;
	       for(int i=0;i<k;i++){
	           cin>>a[i];
	           if(a[i]>l){sum+=i+1;flag=1;dec=0;}
	           
	           if(flag==1 && a[i]<=l){sum+=i-dec;
	               dec++;
	           }}
	       cout<<sum<<endl;
	   }
	return 0;
}
